<!DOCTYPE html>
<html>

<head>
    <title>add banner</title>
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <link rel="stylesheet" type="text/css" href="/stylesheet/signup.css">

</head>

<body>
    <div class="main">


        <!-- Sing in  Form -->
        <section class="sign-in">
            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <img src="/images/Vanchi logo.jpg" alt="">
                        <br>


                    </div>

                    <div class="signin-form">
                        <h2 class="form-title">Add Banner</h2>
                        <form action="" method="POST" class="register-form" id="login-form" enctype="multipart/form-data">

                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-lock"></i></label>
                                <input type="text" name="name" placeholder="Image name" required />
                            </div>


                              <div class="form-group">
                                <label for="image"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="file" name="image" required />
                            </div>

                            <div class="form-group form-button">
                                <input type="submit" class="form-submit" value="Add banner" />
                            </div>

                            <div class="messagelogin">
                                <h4>{{message}} </h4>
                            </div>
                        </form>

                        </ul>
                    </div>
                </div>
            </div>
    </div>
    </section>

    </div>
</body>

</html>